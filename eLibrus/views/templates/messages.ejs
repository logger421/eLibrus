<% if(typeof errors !== "undefined") { %>
<% errors.forEach((error) => { %>
    <p style="color:rgb(202, 76, 76); font-size: 1.5rem;"><%= error.message %></p>
<% }) %>
<% } %>

<% if(success_message != '') { %>
    <p style="color:green; font-size: 1.5rem;"><%= success_message %></p>
<% } %> 

<% if(failure_message != 'undefined') { %>
    <% failure_message.forEach(message => { %>
        <p style="color:rgb(202, 76, 76); font-size: 1.5rem;"><%= message %></p>
    <% }) %>

<% } %> 